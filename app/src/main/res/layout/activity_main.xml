<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_40dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewNormalToast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorNavyblue"
            android:textSize="@dimen/dimen_20sp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:text="@string/normal_toast_message"
             />
        <TextView
            android:id="@+id/textViewCustomizedToast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorNavyblue"
            android:textSize="@dimen/dimen_20sp"
            android:text="@string/customized_toast_message"
            />

    </LinearLayout>


</LinearLayout>